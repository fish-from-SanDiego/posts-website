<div class="main__content base-layout">
  <h1 class="posts__header">Коллекция постов</h1>

  <ul class="posts__list">
    {{#each posts}}
      <li class="posts__item">
        <a href="/posts/{{this.id}}" class="posts__title">{{this.title}}</a>
        <span class="posts__author">Автор: {{this.author.name}}</span>
      </li>
    {{/each}}
  </ul>

  <div class="pagination">
    {{#if (gt currentPage 1)}}
      <a href="?page={{decrement currentPage}}" class="pagination__arrow pagination__arrow--left">←</a>
    {{else}}
      <span class="pagination__arrow pagination__arrow--left pagination__arrow--disabled">←</span>
    {{/if}}

    <span class="pagination__page">Страница {{currentPage}} из {{pageCount}}</span>

    {{#if (lt currentPage pageCount)}}
      <a href="?page={{increment currentPage}}" class="pagination__arrow pagination__arrow--right">→</a>
    {{else}}
      <span class="pagination__arrow pagination__arrow--right pagination__arrow--disabled">→</span>
    {{/if}}
  </div>
</div>
